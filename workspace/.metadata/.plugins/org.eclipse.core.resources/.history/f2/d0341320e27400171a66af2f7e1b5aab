package dataStructures;

import java.util.Set;

import boardFeatures.Line;
import boardFeatures.Square;

public interface Cluster extends UnmodifiableWrappedSet<Square>{

	/**
	 * Gets the center square in this cluster
	 * @return The {@code Square}
	 */
	public Square getCenter();
	
	public Set<Square> getAllOnLine(Line line);
	
	public int getRadius();
	
}
