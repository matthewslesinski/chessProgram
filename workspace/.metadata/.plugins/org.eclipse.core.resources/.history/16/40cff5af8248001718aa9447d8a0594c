package gamePlaying;

/**
 * Holds a representation of the two possible players in a game, white and black. 
 * @author matthewslesinski
 *
 */
public enum Color {

	WHITE(true),
	BLACK(false);
	
	private final boolean value;
	
	
	private Color(boolean value) {
		this.value = value;
	}
	
	/**
	 * Determines if the color of the player is white, as opposed to black
	 * @return if the player is white
	 */
	public boolean isWhite() {
		return value;
	}
	
	/**
	 * returns the Player enum when given a boolean for if it should be white
	 * @param isWhite If the Player should be the white or black color
	 * @return 
	 */
	public static Color getPlayerForBoolean(boolean isWhite) {
		return isWhite ? WHITE : BLACK;
	}
	
	public String toString() {
		return value ? "white" : "black";
	}
}
