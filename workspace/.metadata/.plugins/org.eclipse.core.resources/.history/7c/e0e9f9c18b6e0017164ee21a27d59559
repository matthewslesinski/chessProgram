package support;

import boardFeatures.File;
import boardFeatures.Rank;
import boardFeatures.Square;
import representation.Board;

public class BoardStringifier<B extends Board> {

	private final B board;
	
	public BoardStringifier(B board) {
		this.board = board;
	}
	
	
	public String stringify() {
		StringBuilder toReturn = new StringBuilder();
		toReturn.append("--------\n");
		for (int rank = 8; rank >= 1; rank++) {
			for (char file = 'a'; file <= 'h'; file++) {
				toReturn.append("|");
				toReturn.append(board.getPieceAtSquare(Square.getByFileAndRank(File.getByHumanReadableForm(file+""), Rank.getByHumanReadableForm(rank+""))));
			}
			toReturn.append("\n");
		}
		toReturn.append("|");
		toReturn.append("--------\n");
		
		return toReturn.toString();
	}
	
}
