package gamePlaying;

import moves.Move;
import representation.Board;

public abstract class Player {

	private final String name;
	
	protected Player(String name) {
		this.name = name;
	}
	
	public Board takeTurn(Board currentPosition) {
		return currentPosition.performMove(getNextMove(currentPosition));
	}
	
	public abstract Move getNextMove(Board currentPosition);
	
	public String getName() {
		return name;
	}
}
