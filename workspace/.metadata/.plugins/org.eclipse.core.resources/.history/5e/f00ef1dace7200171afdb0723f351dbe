package dataStructures;

public class EvenlySpacedCircle {

	// This enum is defined specifically to allow the usage of EnumMap
	private enum Sector {
		UP,
		UP_UP_RIGHT,
		UP_RIGHT,
		UP_RIGHT_RIGHT,
		RIGHT,
		RIGHT_RIGHT_DOWN,
		RIGHT_DOWN,
		RIGHT_DOWN_DOWN,
		DOWN,
		DOWN_DOWN_LEFT,
		DOWN_LEFT,
		DOWN_LEFT_LEFT,
		LEFT,
		LEFT_LEFT_UP,
		LEFT_UP,
		LEFT_UP_UP;
		
		static {
			for (Sector sector : values()) {
				sector.nearestDiagonal = sector.isBetweenLines ? values()[sector.ordinal() + (sector.ordinal() % 4) - 2] : null;
			}
		}
		
		final boolean isBetweenLines;
		Sector nearestDiagonal;
		private Sector() {
			this.isBetweenLines = this.ordinal() % 2 == 1;
		}
		
		
		
	}
}
