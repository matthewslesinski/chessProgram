package boardFeatures;

import java.util.Collection;
import java.util.EnumMap;
import java.util.EnumSet;
import java.util.Iterator;
import java.util.Map;
import java.util.Set;

public class SquareSet implements Set<Square> {

	private final Set<Square> squares;
	private final Map<LineType, Map<? extends Line, Set<Square>>> lineIndexedSquares;
	
	@SuppressWarnings("unchecked")
	public SquareSet(Collection<Square> squares) {
		this.squares = EnumSet.copyOf(squares);
		this.lineIndexedSquares = new EnumMap<>(LineType.class);
		for (Square square : squares) {
			for (LineType lineType : LineType.values()) {
				Map<? extends Line, Set<Square>> innerMap = lineIndexedSquares.getOrDefault(lineType, getNewSet(lineType.getType()));
				lineIndexedSquares.putIfAbsent(lineType, innerMap);
				Set<Square> squaresInALine = innerMap.getOrDefault(lineType.getLineBySquare(square), EnumSet.noneOf(Square.class));
				innerMap.putIfAbsent(key, value)
			}
		}
	}
	
	@SuppressWarnings({ "unchecked", "rawtypes" })
	private <T extends Line> Map<T, Set<Square>> getNewSet(Class<T> type) {
		return new EnumMap(type);
	}
	
